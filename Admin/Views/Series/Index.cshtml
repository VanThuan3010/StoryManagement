@using StoryManagement.Model.Entity
@using StoryManagement.Model.Enum

@{
    ViewData["Title"] = "Series truyện";
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Series</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách series</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" id="btnCreate">Thêm mới</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-lg-3">
                        <input type="text" class="form-control" id="txtSearch" placeholder="Tìm kiếm tên" />
                    </div>
                    <div class="col-lg-1">
                        <button type="button" id="btnSearch" class="btn btn-primary btn-sm mr-5"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="col-lg-12 table-responsive" style="height: 600px;">
                    <table class="table table-bordered" id="tblSeries"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="seriesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="seriesForm">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm / Sửa Series</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="SeriesId" name="Id" />

                    <div class="mb-3">
                        <label for="SeriName" class="form-label">Tên Series</label>
                        <input type="text" class="form-control" id="SeriName" name="SeriName" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Danh sách truyện trong Series</label>
                        <table class="table table-sm align-middle" id="tblStories">
                            <thead>
                                <tr>
                                    <th style="width: 90%">Truyện</th>
                                    <th style="width: 10%">Thứ tự</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnAddStoryRow">+ Thêm truyện</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSubmit" class="btn btn-success">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

