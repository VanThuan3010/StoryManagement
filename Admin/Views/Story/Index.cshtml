@using StoryManagement.Model.Entity
@using StoryManagement.Model.Enum

@{
    ViewData["Title"] = "Danh sách truyện";
    // var lstTags = (List<Tags>)ViewBag.lstTag;
    // var lstAuthors = (List<Authors>)ViewBag.lstAuthor;
    // var listType = Enum.GetValues(typeof(StatusStory)).Cast<StatusStory>().Select(v => new SelectListItem
    //         {
    //             Text = v.ToString(),
    //             Value = ((int)v).ToString()
    //         }).ToList();
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Truyện</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Danh sách truyện</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" id="btnCreate">Thêm mới</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-lg-3">
                        <input type="text" class="form-control" id="txtSearch" placeholder="Tìm kiếm tên truyện" />
                    </div>
                    <div class="col-lg-2">
                        <input type="text" class="form-control" name="name" value="" id="searchTag" />
                        <div id="sTagRes"></div>
                    </div>
                    <div class="col-lg-2">
                        <input type="text" class="form-control" name="name" value="" id="searchSubTag" />
                        <div id="sSubTagRes"></div>
                    </div>
                    <div class="col-lg-2">
                        <input type="text" class="form-control" name="name" value="" id="searchAuthor" />
                        <div id="sAuthorRes"></div>
                    </div>
                    <div class="col-lg-1">
                        <input type="checkbox" name="checkbox" value="All" id="chk" checked>
                        <label for="chk" id="lblStt">Tất cả</label>
                    </div>
                    <div class="col-lg-1">
                        <button type="button" id="btnSearch" class="btn btn-primary btn-sm mr-5"><i class="fas fa-search"></i></button>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <h5>Danh sách tìm kiếm</h5>
                    </div>
                    <div class="col-lg-4 mt-2" style="max-height: 240px; overflow-y: scroll;" id="tagSelected">
                        <ul class="lst-tag list-unstyled d-flex flex-wrap gap-2"></ul>
                    </div>
                    <div class="col-lg-4 mt-2" style="max-height: 240px; overflow-y: scroll;" id="subTagSelected">
                        <ul class="lst-subTag list-unstyled d-flex flex-wrap gap-2"></ul>
                    </div>
                    <div class="col-lg-4 mt-2" style="max-height: 240px; overflow-y: scroll;" id="authorSelected">
                        <ul class="lst-author list-unstyled d-flex flex-wrap gap-2"></ul>
                    </div>
                </div>
                <div class="col-lg-12 table-responsive" style="height: 600px;">
                    <table class="table table-bordered" id="tblStory"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalCreateOrEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-modal="true" role="dialog" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="labelAction"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmStory" method="post">
                    <input type="text" hidden id="txtIdModal" name="Id" />
                    <div class="form-group mb-3">
                        <label class="form-label required">Tên truyện</label>
                        <textarea rows="3" class="form-control" name="txtName" id="txtName"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Chương truyện</label>
                        <textarea rows="6" class="form-control" name="NumberChapter" id="txtNumberChapter"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Tag</label>
                        <textarea rows="3" class="form-control" name="tagName" id="txtTagName"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Nguồn</label>
                        <select class="form-select" id="sources" name="sources">
                            <option value="SacHiepVien">SacHiepVien</option>
                            <option value="SangTacViet">SangTacViet</option>
                            <option value="Wattpad">Wattpad</option>
                            <option value="HacDong">HacDong</option>
                            <option value="AI">AI</option>
                            <option value="Other">Khác</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Thẻ</label>
                        <select class="form-select" id="sltFormTag" multiple name="ListTag">
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Thẻ phụ</label>
                        <select class="form-select" id="sltFormSubTag" multiple name="ListSubTag">
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Tác giả</label>
                        <select class="form-select" id="sltFormAuthor" multiple name="ListAuthor">
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSubmit">Lưu</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>