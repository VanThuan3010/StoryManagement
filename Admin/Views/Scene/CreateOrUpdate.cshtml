@using StoryManagement.Model.Entity

@{
    ViewData["Title"] = ViewBag.id <= 0 ? "Thêm mới cảnh truyện" : "Sửa nội dung cảnh";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form id="frmScene" asp-action="CreateOrUpdate" enctype="multipart/form-data" method="post">
                    <input type="text" hidden value="@ViewBag.idScene" id="idScene" />
                    <div class="form-group col-lg-12 mb-3">
                        <label class="form-label required">Trích từ</label>
                        <textarea id="fromStory" name="fromStory" class="form-control" id="txtStoryName"></textarea>
                    </div>
                    <div class="form-group col-lg-12 mb-3">
                        <label class="form-label required">Tiêu đề</label>
                        <input id="title" name="title" class="form-control" id="txtTitle" />
                    </div>
                    <div class="form-group col-lg-12 mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea id="description" name="description" class="form-control" id="txtDescription"></textarea>
                    </div>
                    <div class="form-group col-lg-12 mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea class="form-control" id="txtContent" name="txtContent"></textarea>
                    </div>
                    <div class="mt-4">
                        <button class="btn btn-success" style="width:100px;" type="submit" id="Save">Lưu</button>
                        <a href="/Home" class="btn w-md btn-outline-info waves-effect waves-light">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        CKEDITOR.replace('txtContent', {
            height: '700px'
        });
    </script>
}