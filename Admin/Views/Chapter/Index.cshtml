@using StoryManagement.Model.Entity
@using StoryManagement.Model.Enum

@{
    ViewData["Title"] = "Chương truyện";
    Story story = (Story)ViewBag.getStory;
    List<Part_Chapter> part_Chapters = (List<Part_Chapter>)ViewBag.PartChapter;
    var ChapterCount = (int)ViewBag.ChapterCount;
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Truyện</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@story.Name</li>
            </ol>
        </nav>
    </div>
    <div class="ms-auto">
        <div class="btn-group">
            <input type="file" id="txtFile" accept=".txt" />
            <button class="btn btn-success me-2" onclick="ImportTxt.upload()">Import</button>
            @* <button type="button" class="btn btn-success mr-2" id="savePosition">Lưu vị trí</button> *@
            <button type="button" class="btn btn-primary" id="btnCreate">Thêm mới</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="col-lg-12 table-responsive">
                    <input type="hidden" value="@ViewBag.StoryId"  id="saveStoryId"/>
                    <table class="table table-bordered" id="tblChapter"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="importModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-body">
                <input type="text" hidden value="0" id="Id" name="Id" />
                <input type="text" hidden value="@ViewBag.StoryId" id="StoryId" name="StoryId" />
                <input type="number" hidden value="0" id="saveIndexChapter" name="saveIndexChapter" />
                <input type="number" hidden value="0" id="isLastChapter" name="isLastChapter" />
                <div class="form-group col-lg-12 mb-3">
                    <label class="form-label required">Tiêu đề</label>
                    <textarea class="form-control" id="txtTitleChapter"></textarea>
                </div>
                <div class="form-group col-lg-12 mb-3">
                    <label class="form-label">Phần truyện</label>
                    <div class="d-flex gap-3">
                        <select class="form-select" id="BelongPart" name="BelongPart">
                            @if (part_Chapters.Count > 0)
                            {
                                foreach (Part_Chapter item in part_Chapters)
                                {
                                    <option value="@item.Id">@item.Name (@item.ChapterCount) </option>
                                }
                            }
                        </select>
                        <a id="addPart" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary">+</a>
                    </div>
                </div>
                <div class="form-group col-lg-12 mb-3">
                    <label class="form-label">Vị trí thêm</label>
                    <div class="row">
                        <div class="col-3 mt-3">
                            <input class="form-control" type="text" id="orderChapter" value="@(ChapterCount + 1)" />
                        </div>
                        <div class="col-2 mt-3">
                            <button type="button" id="btnSearchChapter" class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-12 mb-3">
                    <label class="form-label">Nội dung chương</label>
                    <textarea class="form-control" id="importEditor" name="importEditor"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveAndNext" onclick="ImportTxt.Save()">Lưu</button>
                <button type="button" class="btn btn-secondary" id="btnNextChapter" onclick="ImportTxt.Next()">Tiếp</button>
                @*   <button id="btnNext" class="btn btn-primary" onclick="ImportTxt.saveAndNext()">
                    Lưu
                </button> *@
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        CKEDITOR.replace('importEditor', {
            height: 600
        });
    </script>
}
